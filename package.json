{
	"name": "svelte-stack",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "bunx nodemon --watch dev.ts --watch src/hooks.server.ts --exec 'bun --bun dev.ts'",
		"dev-db": "docker compose -f docker-compose.dev.yml up",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"db:push": "drizzle-kit push:pg --config=drizzle.config.ts",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/bun": "^1.1.3",
		"@types/nodemailer": "^6.4.14",
		"@types/pg": "^8.11.4",
		"@types/react": "^18.2.79",
		"autoprefixer": "^10.4.16",
		"drizzle-kit": "^0.21.2",
		"nodemon": "^3.1.1",
		"postcss": "^8.4.32",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"svelte": "^4.2.17",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"@react-email/components": "^0.0.16",
		"@react-email/tailwind": "^0.0.15",
		"@zxcvbn-ts/core": "^3.0.4",
		"@zxcvbn-ts/language-common": "^3.0.4",
		"@zxcvbn-ts/language-de": "^3.0.2",
		"@zxcvbn-ts/language-en": "^3.0.2",
		"sveltekit-flash-message": "^2.4.4",
		"sveltekit-rate-limiter": "^0.5.1",
		"sveltekit-superforms": "^2.12.3",
		"arctic": "^1.5.0",
		"bits-ui": "^0.21.7",
		"bun": "^1.1.10",
		"clsx": "^2.1.0",
		"cookie": "^0.6.0",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.30.7",
		"drizzle-zod": "^0.5.1",
		"lucia": "^3.2.0",
		"lucide-svelte": "^0.365.0",
		"mode-watcher": "^0.3.0",
		"nodemailer": "^6.9.13",
		"oslo": "^1.2.0",
		"pg": "^8.11.5",
		"postgres": "^3.4.4",
		"react": "^18.2.0",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-sonner": "^0.3.21",
		"svelte-turnstile": "^0.5.0",
		"tailwind-merge": "^2.2.2",
		"tailwind-variants": "^0.2.1",
		"vite": "^5.0.3",
		"zod": "^3.22.4"
